<%= simple_form_for(@boardmember) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :biography %>
    <%= f.input :office %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
