                               <%= image_tag(photo.url(:medium)) %>
                               <div class="overlay"></div>
                               <div class="gallery-content">
                                   <%= link_to '<i class="fa fa-expand" aria-hidden="true"></i>'.html_safe, photo.url, data: { rel: "lightcase:myCollection" } %>
                               </div>                                     
                           </div>
                      </div>   
          <% end %>
                </div>                      
            </div>
        </div>            
    </div>
</section> 


<% if user_signed_in? %>
<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back', galleries_path %>
<% end %>
