<section class="gallery-section section">
    <div class="container">
        <div class="row">
            <div class="section-heading">
                <span class="flaticon-solidarity"></span>
                <h3><%= @gallery.name %> Photo Gallery</h3>
                <p><%= @gallery.description %></p>
            </div>                    
        </div>
        <div class="row">
            <div class="gallery">
